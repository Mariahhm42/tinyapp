<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>

      <div class="ml-auto">
        <% if (username) { %>
          <!-- Display username and logout button when logged in -->
          <span class="text-light mr-3">Logged in as: <%= username %></span>
          <form method="POST" action="/logout" class="form-inline">
            <button class="btn btn-outline-light" type="submit">Logout</button>
          </form>
        <% } else { %>
          <!-- Display login form when not logged in -->
          <form method="POST" action="/login" class="form-inline">
            <input
              type="text"
              name="username"
              placeholder="Enter your username"
              class="form-control mr-2"
            />
            <button class="btn btn-outline-light" type="submit">Login</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
